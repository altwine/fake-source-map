{
    "name": "fake-source-map",
    "author": "altwine",
    "description": "Prank devtools bros :-)",
    "homepage": "https://github.com/altwine/fake-source-map",
    "version": "1.0.0",
    "type": "module",
    "files": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/altwine/fake-source-map.git"
    },
    "module": "dist/index.js",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "format": "prettier --write \"src/**/*.ts\"",
        "clean": "rimraf dist",
        "compile": "tsc",
        "test": "jest",
        "build": "npm run clean && npm run format && npm run test && npm run compile && node ./dist/index.js"
    },
    "prettier": {
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 100,
        "tabWidth": 4,
        "endOfLine": "auto"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        }
    },
    "license": "MIT",
    "dependencies": {
        "source-map": "^0.7.4"
    },
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "@types/node": "^22.14.0",
        "jest": "^29.7.0",
        "prettier": "^3.5.3",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.3.1",
        "typescript": "^5.8.3"
    }
}
